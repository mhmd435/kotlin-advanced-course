<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.besenior.kotlinadvancedcourse.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_singleNoteFragment"
            app:destination="@id/singleNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/singleNoteFragment"
        android:name="com.besenior.kotlinadvancedcourse.ui.SingleNoteFragment"
        android:label="add note"
        tools:layout="@layout/fragment_single_note">
        <action
            android:id="@+id/action_singleNoteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/planFragment"
        android:name="com.besenior.kotlinadvancedcourse.ui.PlanFragment"
        android:label="fragment_plan"
        tools:layout="@layout/fragment_plan" />
</navigation>